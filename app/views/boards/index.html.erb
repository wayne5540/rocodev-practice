<h1>Boards list</h1>

<table>
    <thead>
      <td>#</td>
      <td>name</td>
      <td>description</td>
    </thead>
  <% @boards.each do |board| %>
    <tr>
      <td><%= board.id %></td>
      <td><%= link_to(board.name, board_path(board)) %></td>
      <td><%= board.description %></td>
    </tr>
  <% end %>
</table>
