<h1>Topics list</h1>

<div class="panel panel-default">
  <div class="panel-heading">Boards</div>
  <table class="table">
    <thead>
      <td class="col-md-1">#</td>
      <td class="col-md-3">title</td>
      <td class="col-md-6">content</td>
      <td class="col-md-2"></td>
    </thead>
    <% @topics.each do |topic| %>
    <tr>
      <td><%= render_topic_id(topic) %></td>
      <td><%= link_to(render_topic_title(topic), render_board_topic_path(topic)) %></td>
      <td><%= render_topic_content(topic) %></td>
      <td >
        <%= link_to("edit", edit_account_topic_path(topic), :class => "btn btn-default") %>
        <%= link_to("delete", account_topic_path(topic), :class => "btn btn-default", :method => :delete, :confirm => "Are you sure?") %>
      </td>
    </tr>
    <% end %>
  </table>
</div>

